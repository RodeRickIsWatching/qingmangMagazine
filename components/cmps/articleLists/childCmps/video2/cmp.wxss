/* components/cmps/articleLists/childCmps/video2/cmp.wxss */
.wrapper {
    width: 100%;
}
.video {
    width: 100%;
}
.img-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
}
.poster {
    width: 100%;
    height: 100%;
}
.btn-wrapper {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, .6);
}
.play-btn {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.duration {
    font-size: 24rpx;
    color: #fff;
    position: absolute;
    top: 65%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.main-title {
    font-size: 40rpx;
    padding: 20rpx;
}
.mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 1334rpx;
    background-color: rgba(0, 0, 0, .6);
}